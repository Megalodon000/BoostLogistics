<div class="mx-auto md:w-2/3 w-full flex flex-col items-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg shadow-md overflow-hidden w-full">
    <%= @blog.image.present? ? image_tag(@blog.image, class: 'w-full h-60 object-cover') : image_tag("https://via.placeholder.com/1200x800", class: 'w-full h-60 object-cover') %>
    <div class="p-4">
      <h1 class="text-3xl font-bold mb-2"><%= @blog.title %></h1>
      <p class="text-gray-600 text-sm mb-4"><%= @blog.created_at.strftime('%B %d, %Y') %></p>
      <p class="text-gray-800"><%= @blog.content %></p>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Edit this blog", edit_customer_blog_path(@blog), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to blogs", customer_blogs_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
