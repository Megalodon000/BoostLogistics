<div id="<%= dom_id(blog) %>" class="bg-white rounded-lg shadow-md overflow-hidden">
  <% if blog.image.present? %>
    <%= image_tag(blog.image, class: 'w-full h-32 object-cover', alt: blog.title) %>
  <% else %>
    <%= image_tag("https://via.placeholder.com/300x200", class: 'w-full h-32 object-cover', alt: "Placeholder Image") %>
  <% end %>

  <div class="p-4">
    <h2 class="text-lg font-semibold mb-2 truncate">
      <%= link_to blog.title, customer_blog_path(blog), class: 'text-blue-500 hover:underline' %>
    </h2>
    <p class="text-gray-600 text-sm mb-2">
      <%= blog.created_at.strftime('%b %d, %Y') %>
    </p>
    <p class="text-gray-800 mb-4">
      <%= truncate(blog.content, length: 100) %> <!-- Truncate content to fit the card -->
    </p>
    <div class="flex space-x-2">
      <% if action_name != "show" %>
        <%= link_to "Show", customer_blog_path(blog), class: "bg-blue-500 text-white py-1 px-3 rounded text-xs hover:bg-blue-600" %>
      <% end %>
    </div>
  </div>
</div>
