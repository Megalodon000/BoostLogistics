<!-- app/views/bookings/_form.html.erb -->
<%= form_with(model: booking, local: true, class: "space-y-6") do |form| %>
  <% if booking.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
      <ul>
        <% booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :origin, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :origin, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :destination, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :destination, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :shipment_date, class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_select :shipment_date, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :shipment_type, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :shipment_type, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :weight, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :weight, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= form.label :length, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :length, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
    <div>
      <%= form.label :width, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :width, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
    <div>
      <%= form.label :height, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :height, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
  </div>

  <div>
    <%= form.label :special_instructions, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :special_instructions, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </div>

  <div class="mt-6">
    <%= form.submit "Submit Booking", class: "bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 focus:outline-none" %>
  </div>
<% end %>
