<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-4">Booking Details</h1>
  <p><strong>Origin:</strong> <%= @customer_booking.origin %></p>
  <p><strong>Destination:</strong> <%= @customer_booking.destination %></p>
  <p><strong>Shipment Date:</strong> <%= @customer_booking.shipment_date %></p>
  <p><strong>Shipment Type:</strong> <%= @customer_booking.shipment_type %></p>
  <p><strong>Weight:</strong> <%= @customer_booking.weight %></p>
  <p><strong>Dimensions:</strong> <%= @customer_booking.length %> x <%= @customer_booking.width %> x <%= @customer_booking.height %></p>
  <p><strong>Special Instructions:</strong> <%= @customer_booking.special_instructions %></p>
  <p><strong>Status:</strong> <%= @customer_booking.status %></p>

  <h2 class="text-xl font-bold mt-6">Tracking Information</h2>
  <% @customer_trackings.each do |tracking| %>
    <div class="bg-gray-100 p-4 rounded-lg mb-4">
      <p><strong>Status:</strong> <%= tracking.status %></p>
      <p><strong>Location:</strong> <%= tracking.location %></p>
      <p><strong>Notes:</strong> <%= tracking.notes %></p>
    </div>
  <% end %>
</div>
