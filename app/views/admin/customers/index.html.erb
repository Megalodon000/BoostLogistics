<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Customers</h1>
    <%= link_to "New Customer", new_admin_customer_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                  Name
                </th>
                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                  Email
                </th>
                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                  Status
                </th>
                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              <% @admin_customers.each do |customer| %>
                <tr class="bg-gray-50 border-b">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                    <%= customer.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                    <%= customer.email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                    <%= customer.approved ? "Approved" : "Pending" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                    <%= link_to "Show", admin_customer_path(customer), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block" %>
                    <%= link_to "Edit", edit_admin_customer_path(customer), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block" %>
                    <% if customer.approved %>
                      <%= button_to "Reject", reject_admin_customer_path(customer), method: :patch, class: "rounded-lg py-3 px-5 bg-red-600 text-white inline-block" %>
                    <% else %>
                      <%= button_to "Approve", approve_admin_customer_path(customer), method: :patch, class: "rounded-lg py-3 px-5 bg-green-600 text-white inline-block" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
