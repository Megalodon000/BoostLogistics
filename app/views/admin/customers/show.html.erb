<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-4">Customer Details</h1>

  <p><strong>Name:</strong> <%= @admin_customer.name %></p>
  <p><strong>Email:</strong> <%= @admin_customer.email %></p>
  <p><strong>Address:</strong> <%= @admin_customer.address %></p>
  <p><strong>Company Type:</strong> <%= @admin_customer.company_type %></p>
  <p><strong>Additional Address:</strong> <%= @admin_customer.additional_address %></p>
  <p><strong>City:</strong> <%= @admin_customer.city %></p>
  <p><strong>Postal Code:</strong> <%= @admin_customer.postal_code %></p>
  <p><strong>Country:</strong> <%= @admin_customer.country %></p>
  <p><strong>Legal Identifier Type:</strong> <%= @admin_customer.legal_identifier_type %></p>
  <p><strong>Shipment Reference:</strong> <%= @admin_customer.shipment_reference %></p>
  <p><strong>Status:</strong> <%= @admin_customer.approved ? "Approved" : "Pending" %></p>

  <div class="mt-4">
    <%= link_to 'Edit', edit_admin_customer_path(@admin_customer), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to 'Back', admin_customers_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
