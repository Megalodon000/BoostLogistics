<%= form_with(model: @admin_booking, url: admin_bookings_path(@admin_booking), local: true) do |form| %>
  <% if @admin_booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
      <ul>
        <% @admin_booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :origin %>
    <%= form.text_field :origin %>
  </div>

  <div>
    <%= form.label :destination %>
    <%= form.text_field :destination %>
  </div>

  <div>
    <%= form.label :shipment_date %>
    <%= form.date_select :shipment_date %>
  </div>

  <div>
    <%= form.label :shipment_type %>
    <%= form.text_field :shipment_type %>
  </div>

  <div>
    <%= form.label :weight %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :length %>
    <%= form.number_field :length %>
  </div>

  <div>
    <%= form.label :width %>
    <%= form.number_field :width %>
  </div>

  <div>
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>

  <div>
    <%= form.label :special_instructions %>
    <%= form.text_area :special_instructions %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.all, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
