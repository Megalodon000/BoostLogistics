<h2 class="text-xl font-bold mb-4">Booking Details</h2>
<ul>
  <li><strong>Customer Name:</strong> <%= @admin_booking.customer.name %></li>
  <li><strong>Email:</strong> <%= @admin_booking.customer.email %></li>
  <li><strong>Origin:</strong> <%= @admin_booking.origin %></li>
  <li><strong>Destination:</strong> <%= @admin_booking.destination %></li>
  <li><strong>Shipment Type:</strong> <%= @admin_booking.shipment_type %></li>
  <li><strong>Shipment Date:</strong> <%= @admin_booking.shipment_date %></li>
  <li><strong>Status:</strong> <%= @admin_booking.status %></li>
  <li><strong>Special Instructions:</strong> <%= @admin_booking.special_instructions %></li>
</ul>

<h3 class="text-lg font-bold mt-6">Trackings</h3>
<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead class="bg-gray-100 border-b">
    <tr>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Location</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Status</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Notes</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200">
    <% @admin_trackings.each do |tracking| %>
      <tr class="bg-white">
        <td class="px-6 py-4 whitespace-nowrap"><%= tracking.location %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= tracking.status %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= tracking.notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>
