<h1>Bookings Management</h1>

<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead class="bg-gray-100 border-b">
    <tr>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Customer Name</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Email</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Origin</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Destination</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Status</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">Actions</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200">
    <% @admin_bookings.each do |booking| %>
      <tr class="bg-white">
        <td class="px-6 py-4 whitespace-nowrap"><%= booking.customer.name %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= booking.customer.email %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= booking.origin %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= booking.destination %></td>
        <td class="px-6 py-4 whitespace-nowrap">
          <%= form_with model: booking, url: admin_booking_path(booking), method: :patch, class: "inline" do |f| %>
            <%= f.select :status, ['Pending', 'Approved', 'In Progress', 'Completed'], {}, class: "bg-white border rounded px-2 py-1" %>
            <%= f.submit "Update", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded" %>
          <% end %>
        </td>
        <td class="px-6 py-4 whitespace-nowrap flex space-x-2">
          <%= link_to "Show", admin_booking_path(booking), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <%= link_to "Delete", admin_booking_path(booking), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
