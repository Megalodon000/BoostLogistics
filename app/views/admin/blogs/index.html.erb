<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Blogs</h1>
    <%= link_to "New Blog", new_admin_blog_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-full mt-5">
    <div class="overflow-x-auto">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto">
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% @admin_blogs.each do |blog| %>
              <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <%= blog.image.present? ? image_tag(blog.image, class: 'w-full h-32 object-cover') : image_tag("https://via.placeholder.com/300x200", class: 'w-full h-32 object-cover') %>
                <div class="p-3">
                  <h2 class="text-lg font-bold mb-1 truncate"><%= link_to blog.title, admin_blog_path(blog) %></h2>
                  <p class="text-gray-600 text-sm mb-2"><%= blog.created_at.strftime('%b %d, %Y') %></p>
                  <div class="flex space-x-2">
                    <%= link_to "Edit", edit_admin_blog_path(blog), class: "bg-gray-200 text-gray-700 py-1 px-3 rounded text-xs" %>
                    <%= link_to "Destroy", admin_blog_path(blog), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white py-1 px-3 rounded text-xs" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
